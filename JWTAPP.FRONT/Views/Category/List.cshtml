@model List<CategoryListModel>
@{
    Layout = "_Layout";
}
@{
    if (Model?.Count > 0)
    {
        <div class="text-end">
        <a asp-action="Create" asp-controller="Category"
        >Yeni Kayıt Oluştur</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Definition</td>
                    <td>Güncelle</td>
                    <td>Sil</td>




                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                        @item.Definition
                        </td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-action="Update" asp-controller="Category" asp-route-id="@item.Id">Güncelle</a>
                        </td>
                        <td>
                        <a class="btn btn-danger btn-sm" asp-action="Remove" asp-controller="Category" asp-route-id="@item.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center">
            Herhangi Bir Kayıt Bulunamadı
        </div>
    }
}

